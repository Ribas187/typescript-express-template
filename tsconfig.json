{
  "compilerOptions": {
    "allowJs": true,
    "target": "es5",
    "experimentalDecorators": true,
    // "module": "",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
